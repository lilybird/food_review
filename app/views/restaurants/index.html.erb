<h1>Listing restaurants</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= link_to 'Show', restaurant, :class => "btn btn-default btn-small" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), :class => "btn btn-warning btn-small" %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, :class => "btn btn-primary btn-large" %>
