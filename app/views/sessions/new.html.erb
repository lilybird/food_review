<h1>Sign in</h1>

<% if notice.try(:downcase).try(:include?, 'invalid') %>
  <div class="alert alert-danger">
  	<button type="button" class="close" data-dismiss="alert">&times;</button>
  	<%= notice %>
  </div>
<% elsif notice %>
  <div class="alert alert-success">
  	<button type="button" class="close" data-dismiss="alert">&times;</button>
  	<%= notice %>
  </div>
<% end %>

<%= form_tag('/sessions/create') do %>
	<%= label_tag :name %>
	<%= text_field_tag :name %>
	<%= submit_tag 'sign in' %>
<% end %>